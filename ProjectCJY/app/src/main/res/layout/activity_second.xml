<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background1"
    tools:context="com.example.s404_14.projectcjy.SecondActivity">

    <TextView
        android:background="#003399"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="35sp"
        android:text="뽑아줘"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:background="#FF4848"
        android:textColor="#ffffff"
        android:textSize="30sp"
        android:gravity="center"
        android:text="선택지를 입력하세요\n(최대 8개)"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView2" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView2"
        android:layout_above="@+id/imageButton">
        <LinearLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_margin="20dp"
                        android:background="@drawable/ared"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></ImageView>
                    <EditText
                        android:id="@+id/editText1"
                        android:maxLength="8"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:hint="선택지 입력란"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/aorange"></ImageView>

                    <EditText
                        android:id="@+id/editText2"
                        android:maxLength="8"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:hint="선택지 입력란"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
        </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_margin="20dp"
                        android:background="@drawable/ayellow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></ImageView>
                    <EditText
                        android:id="@+id/editText3"
                        android:maxLength="8"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:hint="선택지 입력란"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/agreen"></ImageView>

                    <EditText
                        android:id="@+id/editText4"
                        android:maxLength="8"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:hint="선택지 입력란"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_margin="20dp"
                        android:background="@drawable/ablue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></ImageView>
                    <EditText
                        android:id="@+id/editText5"
                        android:maxLength="8"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:hint="선택지 입력란"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/acyan"></ImageView>

                    <EditText
                        android:id="@+id/editText6"
                        android:maxLength="8"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:hint="선택지 입력란"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>


                </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_margin="20dp"
                        android:background="@drawable/apink"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"></ImageView>
                    <EditText
                        android:id="@+id/editText7"
                        android:maxLength="8"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:hint="선택지 입력란"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:background="@drawable/apurple"></ImageView>

                    <EditText
                        android:id="@+id/editText8"
                        android:maxLength="8"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        android:hint="선택지 입력란"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />
                </LinearLayout>
            </LinearLayout>



        </LinearLayout>


    </ScrollView>
    <ImageButton
        android:foregroundGravity="center"
        android:background="@drawable/selbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:id="@+id/imageButton" />

</RelativeLayout>
